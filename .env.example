# ========================================
# ragxuary - Environment Variables
# ========================================
# Copy this file to .env and update the values
#
# Legend:
#   [REQUIRED] - Must be set for the application to work
#   [OPTIONAL] - Has default value, can be customized
#   [SECRET]   - Should be changed in production
# ========================================

# ----------------------------------------
# Database (PostgreSQL)
# ----------------------------------------

# [REQUIRED] Database connection string for API (async driver)
DATABASE_URL=postgresql+asyncpg://ragxuary:ragxuary_dev@localhost:5432/ragxuary

# [REQUIRED] PostgreSQL container settings
POSTGRES_USER=ragxuary
POSTGRES_PASSWORD=ragxuary_dev
POSTGRES_DB=ragxuary

# ----------------------------------------
# Cache (Redis)
# ----------------------------------------

# [REQUIRED] Redis connection string
REDIS_URL=redis://localhost:6379

# ----------------------------------------
# Authentication (NextAuth.js v5)
# ----------------------------------------

# [REQUIRED][SECRET] Secret key for NextAuth.js session encryption
# Generate with: openssl rand -base64 32
AUTH_SECRET=your-development-secret-key-change-in-production

# [OPTIONAL] NextAuth.js URL (defaults to NEXTAUTH_URL or auto-detected)
# AUTH_URL=http://localhost:3000

# [OPTIONAL] Trust the host header (set to true behind reverse proxy)
# AUTH_TRUST_HOST=true

# ----------------------------------------
# JWT (API Authentication)
# ----------------------------------------

# [REQUIRED][SECRET] Secret key for JWT token signing
# Generate with: openssl rand -base64 32
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# [OPTIONAL] JWT algorithm (default: HS256)
# JWT_ALGORITHM=HS256

# [OPTIONAL] Access token expiration in minutes (default: 30)
# ACCESS_TOKEN_EXPIRE_MINUTES=30

# [OPTIONAL] Refresh token expiration in days (default: 7)
# REFRESH_TOKEN_EXPIRE_DAYS=7

# ----------------------------------------
# API Settings
# ----------------------------------------

# [REQUIRED] Backend API URL (used by frontend)
BACKEND_URL=http://localhost:8000

# [OPTIONAL] Application name (default: ragxuary)
# APP_NAME=ragxuary

# [OPTIONAL] Enable debug mode (default: false)
# DEBUG=true

# ----------------------------------------
# Frontend Settings
# ----------------------------------------

# [OPTIONAL] Node.js environment (development/production)
# NODE_ENV=development

# ----------------------------------------
# LLM Providers
# ----------------------------------------
# Configure one or more LLM providers for RAG functionality
# Uncomment and set the providers you want to use

# --- OpenAI ---
# [OPTIONAL] OpenAI API key
# OPENAI_API_KEY=sk-xxx

# [OPTIONAL] OpenAI API base URL (for OpenAI-compatible APIs)
# Use this for: Azure OpenAI, LocalAI, Groq, Together AI, etc.
# OPENAI_API_BASE=https://api.openai.com/v1

# [OPTIONAL] OpenAI model name (default: gpt-4o-mini)
# OPENAI_MODEL=gpt-4o-mini

# --- Anthropic ---
# [OPTIONAL] Anthropic API key
# ANTHROPIC_API_KEY=sk-ant-xxx

# [OPTIONAL] Anthropic model name (default: claude-sonnet-4-20250514)
# ANTHROPIC_MODEL=claude-sonnet-4-20250514

# --- Ollama (Local) ---
# [OPTIONAL] Ollama base URL
# OLLAMA_BASE_URL=http://localhost:11434

# [OPTIONAL] Ollama model name
# OLLAMA_MODEL=llama3

# --- Provider Selection ---
# [OPTIONAL] Default LLM provider (openai/anthropic/ollama)
# LLM_PROVIDER=openai

# ----------------------------------------
# Embedding Settings
# ----------------------------------------

# [OPTIONAL] Embedding model provider (openai/ollama)
# EMBEDDING_PROVIDER=openai

# [OPTIONAL] OpenAI embedding model
# OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# [OPTIONAL] Ollama embedding model
# OLLAMA_EMBEDDING_MODEL=nomic-embed-text
